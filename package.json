{
  "name": "prepg3-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "infrastructure",
    "apps/*",
    "lambda/*/",
    "shared"
  ],
  "scripts": {
    "cdk": "cd infrastructure && cdk",
    "deploy:infra": "cd infrastructure && cdk deploy --all",
    "deploy:infra:dev": "cd infrastructure && cdk deploy --all --context environment=dev",
    "deploy:infra:prod": "cd infrastructure && cdk deploy --all --context environment=prod",
    "synth": "cd infrastructure && cdk synth",
    "diff": "cd infrastructure && cdk diff",
    "destroy": "cd infrastructure && cdk destroy --all",
    "dev:landing": "cd apps/landing && npm run dev",
    "dev:investor": "cd apps/investor && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "build:landing": "cd apps/landing && npm run build",
    "build:investor": "cd apps/investor && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "setup": "npm install && npm run bootstrap",
    "bootstrap": "cd infrastructure && cdk bootstrap"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  }
}